val N is NUM_CORES-1;
  
proc master_(chanend begin, chanend end) is
{ var v;
  begin ! 0; 
  end ? v;
  assert v = N 
}

proc node_(chanend left, chanend right) is
{ var v;
  left ? v; 
  right ! v + 1
}

proc main() is
{ var i;
  chan c[N+1];
  { master_(c[0], c[N]) ||
    par i in [0 for N] do 
      node_(c[i], c[i+1])
  }
}

