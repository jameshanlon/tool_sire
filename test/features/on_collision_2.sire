proc work() is skip

proc forwards(val n) is
  if n = NUM_CORES-1
  then work()
  else on n+1 do forwards(n+1)

proc backwards(val n) is
  if n = 1 
  then work()
  else on n-1 do backwards(n-1)

proc start_backwards(val n) is
{ backwards(n)
|| backwards(n)
}

proc main() is
{ forwards(0)
|| forwards(0)
|| on NUM_CORES-1 do start_backwards(NUM_CORES-1)
}
