val N := NUM_CORES-1;

proc work() is skip

proc forwards(val n) is
  if n = NUM_CORES-1
  then work()
  else on n+1 do forwards(n+1)

proc backwards(val n) is
  if n = 1 
  then work()
  else on n-1 do backwards(n-1)

proc main() is
{ forwards(0) || forwards(0) || 
  on N do
  { backwards(N) || backwards(N) }
}

