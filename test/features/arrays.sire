val N := 10;

% Pairwise sum of elements
proc sum(var r[N/2], val a[N/2], val b[N/2]) is
  var i;
{ for i := 1 to N/2 do r[i] := a[i] + b[i]
}

% Array slicing
proc foo() is
  var a[N];
  var r[N/2];
  var x[];
  var y[];
  var i;
{ for i:=0 to N-1 do a[i] := i
; x aliases a[0:N/2]
; y aliases a[N/2:N]
; sum(r, x, y)
; sum(r, a[0:N/2], a[N/2:N])
}

proc main() is
{ foo()
}

