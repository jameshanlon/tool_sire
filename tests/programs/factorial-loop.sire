% Calculate the factorial of a value

func factorial(val x) is
  var ans;
  var y;
{ ans := 1
; y := 1
; while y <= x do
  { ans := ans * y
  ; y := y + 1
  }
; return ans
}

% Ouput: 6, 120, 5040
proc main() is
{  printval(factorial(3)) ; printstr("\n")
;  printval(factorial(5)) ; printstr("\n")
;  printval(factorial(7)) ; printstr("\n")
}
